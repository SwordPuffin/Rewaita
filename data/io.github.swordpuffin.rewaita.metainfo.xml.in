<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.swordpuffin.rewaita</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <name>Rewaita</name>
  <summary>Bring color to Adwaita</summary>
  <description>
    <p>Rewaita gives your Adwaita apps a fresh look by tinting them with popular color schemes.</p>
    <p>Supported changes now include modifying application window controls, and making your own custom themes</p>
    <p>Currently, Rewaita only changes GTK4 applications; QT, and Cosmic are NOT supported</p>
  </description>

  <developer id="io.github.swordpuffin.rewaita">
    <name>Nathan Perlman</name>
  </developer>

  <requires>
    <display_length compare="ge">360</display_length>
  </requires>

  <url type="homepage">https://github.com/SwordPuffin/Rewaita</url>
  <url type="vcs-browser">https://github.com/SwordPuffin/Rewaita</url>
  <url type="bugtracker">https://github.com/SwordPuffin/Rewaita/issues</url>
  <url type="contribute">https://github.com/SwordPuffin/Rewaita/pulls</url>

  <translation type="gettext">rewaita</translation>
  <launchable type="desktop-id">io.github.swordpuffin.rewaita.desktop</launchable>
  <content_rating type="oars-1.1" />

  <branding>
    <color type="primary" scheme_preference="light">#a0a36c</color>
    <color type="primary" scheme_preference="dark">#303475</color>
  </branding>

